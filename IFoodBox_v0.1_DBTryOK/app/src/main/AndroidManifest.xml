<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.administrator.ifoodbox_006">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".ActMain"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ActFoodList"
            android:label="管理冰箱食材" />
        <activity
            android:name=".ActFoodAdd"
            android:label="新增食材">

        </activity>

        <activity
            android:name=".ActBuyList"
            android:label="我的購物清單">

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ActMain" />
        </activity>
        <activity
            android:name=".ActShareMap"
            android:label="愛分享地圖">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ActMain" />
        </activity>
        <activity
            android:name=".ActShareSentMes"
            android:label="發佈分享訊息">
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ActMain" />
        </activity>
        <activity android:name=".ActFoodListShow">

        </activity>
    </application>

</manifest>
