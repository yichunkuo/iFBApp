<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.administrator.ifoodbox_006.ActShareSentMes"
    android:weightSum="1"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="食材名稱"/>

        <EditText
            android:id="@+id/txtFoodName"
            android:layout_width="300dp"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_margin">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="食材類別"/>

        <Spinner
            android:id="@+id/spnFoodType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/spn_foodtype"
            android:spinnerMode="dialog"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_margin"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="食材位置"/>

        <Spinner
            android:id="@+id/spnFoodLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/spn_foodlocation"
            android:spinnerMode="dialog"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="食材數量"/>
        <EditText
            android:id="@+id/txtFoodCount"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:numeric="integer" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="冰入日期"/>
        <EditText
            android:id="@+id/txtFoodDate"
            android:layout_height="wrap_content"
            android:layout_width="300dp"
            android:inputType="date"
            />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="有效期限"/>
        <EditText
            android:id="@+id/txtFoodDateline"
            android:layout_width="300dp"
            android:layout_height="wrap_content"
            android:inputType="datetime"/>
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/activity_vertical_margin">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="到期提醒"/>
        <Spinner
            android:id="@+id/spnFoodClockDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:entries="@array/spn_foodclockdate"
            android:spinnerMode="dialog" />
    </LinearLayout>


</LinearLayout>
